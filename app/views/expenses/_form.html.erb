
<%= simple_form_for(@expense, url: expenses_path(type: params[:type])) do |f| %>

  <%- if params[:type] == 'income' || @type == 'income' %>
    <%= f.input :income %>
    <%= f.hidden_field :outcome, value: 0 %>
  <%- elsif params[:type] == 'outcome' || @type == 'outcome'  %>
    <%= f.input :outcome %>
    <%= f.hidden_field :income, value: 0 %>
  <% end %>

  <%= f.input :note %>



  <br>
  <div class="form-actions text-center">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
