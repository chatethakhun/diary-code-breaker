


<%#= render "devise/shared/links" %>
<br />
<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 m-auto">
      <div class="bg-container">
        <%= simple_form_for(@login, url: session_path(resource_name)) do |f| %>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <br />
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>

          <div class="actions d-grid gap-2 col-6 mx-auto">
            <br />
            <%= f.submit 'Login', class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>