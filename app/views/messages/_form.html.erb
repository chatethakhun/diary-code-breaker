
<%= simple_form_for(message, html: { class: 'form-inline d-flex mt-4 gap-3'}) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.hidden_field :room_id, value: room.id %>
  <div class="form-group w-100">
    <%= f.input :content, as: :string, label: false, placeholder: 'Write message...', wrapper: false  %>
  </div>
  <%= f.button :submit ,'Submit', class: 'btn btn-primary', data: { disable_with: false} %>
  <br>
<% end %>
